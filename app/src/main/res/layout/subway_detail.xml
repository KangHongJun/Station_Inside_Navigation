<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ScrollView
            android:id="@+id/Detail_Scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/Detail_Next_Btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="다음역" />

                    <TextView
                        android:id="@+id/Detail_Current_Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="현재역" />

                    <Button
                        android:id="@+id/Detail_Back_Btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="이전역" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Detail_LTime_Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00행 00분 후" />

                        <TextView
                            android:id="@+id/Detail_LNextTime_Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00행 00분 후" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Detail_RTime_Text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="00행 00분 후" />

                        <TextView
                            android:id="@+id/Detail_RNextTime_Text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="00행 00분 후" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/Detail_Route_Btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="경로" />

                    <Button
                        android:id="@+id/Detail_Inner_Btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="역 내부 안내" />

                    <Button
                        android:id="@+id/Deatil_Schedule_Btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="시간표" />

                    <Button
                        android:id="@+id/Detail_Bookmark_Btn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Exit_Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="출구 정보" />

                    <RelativeLayout
                        android:id="@+id/Kakao_map"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_below="@id/Exit_Text" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="시설정보" />

                    <TextView
                        android:id="@+id/Detail_Facility_Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="a,b,c,d" />

                    <Button
                        android:id="@+id/Detail_Inquire_Btn"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="문의하기" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
    <ImageView
        android:id="@+id/Subway_InnerMap"
        android:layout_width="match_parent"
        android:layout_height="269dp"/>

    <LinearLayout
        android:id = "@+id/ITEM_LAYOUT"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ListView
            android:id="@+id/Subway_Floor_List"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/callbox" />

            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/aed" />

            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/elevator" />

            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/fireplug" />


            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/restroom" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>




